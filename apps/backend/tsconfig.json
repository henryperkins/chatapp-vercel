{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "types": ["node"],
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/utils/*": ["utils/*"],
      "@/middleware/*": ["middleware/*"],
      "@/types/*": ["types/*"]
    }
  },
  "include": ["custom.d.ts", "next-env.d.ts", "**/*.ts", "**/*.tsx", "utils/pusher.ts"],
  "exclude": ["node_modules"]
}
